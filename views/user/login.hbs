<section class="login-sec mt-3 container">
	<div class="image-cont">
		<img src="/images/login-image.png" / alt="login">
	</div>

	<div class="signup-form">
		<form class="form1" action="/login" method="POST">
			<h2>Log in</h2>
			{{#if error}}
			<p class="error-msg">{{error}}</p>
			{{/if}}

			{{#if msg}}
			<p class="msg">{{msg}}</p>
			{{/if}}

			<div class="form-group">
				<div class="input-group">
					<input type="text" class="form-control" name="username" placeholder="Username">
				</div>
			</div>
			<div class="form-group">
				<div class="input-group">
					<input type="password" class="form-control" name="password" placeholder="Password">
				</div>
			</div>

			<div class="form-group ">
				<button type="submit" class="btn btn-primary btn-lg 1btn">Log in</button>
		</form>

		<form action="/login" method="POST">
			<input type="text" class="hidden" name="username" value="JackTh">
			<input type="text" class="hidden" name="password" value="mypassword1">
			<button class="btn btn-lg btn" type="submit">
				Login as a guest
			</button>
		</form>
		</div>
		<div class="text-center">Don't you have an account? <a href="/signup">Sing up here</a></div>
	</div>
	</div>

</section>